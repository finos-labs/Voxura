<Window x:Class="Voxura.WpfDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Voxura.WpfDemo"
        xmlns:views="clr-namespace:Voxura.WpfDemo.Views"
        xmlns:vm ="clr-namespace:Voxura.WpfDemo.ViewModels"
        mc:Ignorable="d"
        d:DataContext = "{d:DesignInstance vm:MainViewModel, IsDesignTimeCreatable=True}"
        Title="MainWindow" Height="600" Width="800">
    <StackPanel>
        <views:RFQForm DataContext="{Binding RFQForm}" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="20">
            <TextBox Name="UserText" Text="{Binding UserText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="500"/>
            <Button Content="&#xE1D6;" FontFamily="Segoe MDL2 Assets" Margin="10,0,0,0" Padding="10"  Click="DictateButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
