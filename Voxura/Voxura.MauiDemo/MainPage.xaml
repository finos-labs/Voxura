<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Voxura.MauiDemo.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:Voxura.MauiDemo.ViewModels"
    xmlns:views="clr-namespace:Voxura.MauiDemo.Views"
    x:DataType="viewModels:MainViewModel">

    <ScrollView>
        <StackLayout Padding="30,0" Spacing="25">
            <views:RFQForm  x:Name="RFQFormView" />
            <Border>
                <StackLayout>
                    <Label VerticalOptions="Center" Margin="20, 20, 10, 0">Type or dictate here:</Label>
                    <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" Margin="20, 10, 20, 20">
                        <Editor x:Name="UserText" TextChanged="UserText_OnTextChanged" Text="{Binding UserText, Mode=TwoWay}" HeightRequest="160" WidthRequest="250"/>
                        <Button Text="Mic" Margin="10,0,0,0" Padding="10"  HeightRequest="50" Clicked="DictateButton_Click" VerticalOptions="FillAndExpand"/>
                    </StackLayout>
                </StackLayout>
            </Border>
        </StackLayout>
    </ScrollView>
</ContentPage>
